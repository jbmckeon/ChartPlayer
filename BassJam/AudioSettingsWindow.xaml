<Window x:Class="BassJam.AudioSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BassJam"
        mc:Ignorable="d"
        Title="Audio Settings" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <DockPanel>
        <ComboBox x:Name="AsioCombo" DockPanel.Dock="Top" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" DockPanel.Dock="Bottom">
            <Button Content="Ok" Width="100" Click="OkButton_Click" />
            <Button Content="Cancel" Width="100" HorizontalAlignment="Stretch" Click="CancelButton_Click"/>
        </StackPanel>
        <Grid/>
    </DockPanel>
</Window>
